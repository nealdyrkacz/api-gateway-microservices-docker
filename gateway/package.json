{
  "name": "gateway",
  "version": "1.0.0",
  "description": "A simple Gateway API",
  "engines": {
    "node": "12.19.0"
  },
  "scripts": {
    "start": "node ./build/server.js",
    "build": "tsc",
    "tsc": "rm -r -f ./build && tsc",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "gateway:dev:start": "(ts-node-dev --poll --tree-kill --respawn --transpile-only ./src/server.ts)",
    "gateway:dev:stop": "pkill -f 'gateway'"
  },
  "cacheDirectories": [
    "node_modules"
  ],
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/helmet": "0.0.44",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "nodemon": "^2.0.2",
    "ts-node-dev": "^1.0.0"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cluster": "^0.7.7",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.3",
    "helmet": "^3.21.1",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "os": "^0.1.1",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.0.5"
  },
  "repository": {
    "type": "git"
  }
}
